    </div>
    <button id="close-btn" class="close-btn"><svg class="close-icon" src="./icons/x.svg" /></button>
  </div>
  
  <div class="word-section">
    <span class="word-label">Word</span>
    <span id="word-text" class="word-text">-</span>
  </div>
  
  <div class="translation-section">
    <span class="translation-label">Translation</span>
    <span id="translation-text" class="translation-text">-</span>
    <span id="phonetic-text" class="phonetic-text">Click a word in the lyrics to translate</span>
  </div>

  <button id="add-deck-btn" class="add-deck-btn">
    <svg class="btn-icon" src="./icons/check.svg" />
